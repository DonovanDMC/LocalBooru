<%= custom_form_for(tag_implication) do |f| %>
  <%= f.input(:antecedent_name, label: "From", autocomplete: "tag") %>
  <%= f.input(:consequent_name, label: "To", autocomplete: "tag") %>
  <% if tag_implication.new_record? %>
    <%= f.input(:reason, as: :dtext, limit: FemboyFans.config.forum_post_max_size) %>
  <% end %>
  <%= f.button(:submit, "Submit") %>
<% end %>

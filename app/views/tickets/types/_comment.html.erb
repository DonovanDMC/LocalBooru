<% if @ticket.model %>
  <tr>
    <td><span class="title">Reported Comment</span></td>
    <td>
      <%= link_to("Comment by #{@ticket.model.creator_name}", comment_path(@ticket.model)) %> on
      <%= link_to("post ##{@ticket.model.post_id}", post_path(@ticket.model.post_id)) %>
    </td>
  </tr>
<% else %>
  <tr>
    <td><span class="title">Reported Comment</span></td>
    <td><span class="text-error">Comment has been deleted</span></td>
  </tr>
<% end %>

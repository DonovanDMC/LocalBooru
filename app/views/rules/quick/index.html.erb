<%= table_for(@quick) do |t| %>
  <% t.column(:header) %>
  <% t.column(:reason) %>
  <% t.column("Rule") do |q| %>
    <%= link_to(q.rule.name, rules_path(anchor: q.rule.anchor)) %>
  <% end %>
  <% t.column(width: "8%") do |q| %>
    <%= link_to("Edit", edit_quick_rule_path(q)) %> |
    <%= link_to("Delete", quick_rule_path(q), method: :delete) %>
  <% end %>
<% end %>

<%= render(partial: "rules/secondary_links") %>

<% content_for(:page_title) do %>
  Quick Rules
<% end %>

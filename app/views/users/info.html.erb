<% content_for(:page_title) do %>
  User Info
<% end %>

<h1>Throttles</h1>
<table class="striped">
  <tr>
    <th width="50%">Throttle</th>
    <th>Limit</th>
  </tr>
  <% UserInfo::THROTTLE_LIST.each do |throttle| %>
    <% t = @info.throttles[throttle] %>
    <tr>
      <td><%= throttle %></td>
      <td>
        <% if !t.level %>
          N/A
        <% elsif t.newbie %>
          Newbie
        <% elsif t.bypass %>
          Bypass
        <% else %>
          <%= t.limit %>
        <% end %>
        <% if t.url %>
          <%= link_to("Â»", t.url, target: "_blank", rel: "noopener") %>
        <% end %>
      </td>
    </tr>
  <% end %>
</table>

<h1>API</h1>
<table class="striped">
  <thead>
  <tr>
    <th width="50%">Limit</th>
    <th>Remaining</th>
  </tr>
  </thead>
  <tbody>
  <tr>
    <td><%= @info.api[:limit] %></td>
    <td><%= @info.api[:remaining] %></td>
  </tr>
  </tbody>
</table>
